<sect1 id="configplugins">
<title>Plugins</title>
<para>
    <mediaobject>
        <imageobject>
            <imagedata fileref="configure4.png" format="PNG"/>
        </imageobject>
        <textobject>
	    <phrase>Plugins Configuration.</phrase>
        </textobject>
    </mediaobject>
