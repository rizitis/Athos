# See https://editorconfig.org/
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 100

[*.{c,h}]
indent_style = tab
indent_size = 8

[*.cpp]
indent_style = space
indent_size = 4

[qt/**.h]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[meson.build]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2
max_line_length = 120

[docs/**.xml]
indent_style = tab
indent_size = 8
max_line_length = 160
